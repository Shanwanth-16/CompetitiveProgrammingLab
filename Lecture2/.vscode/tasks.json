{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: clang++ build and run active file",
        "command": "/usr/bin/clang++",  // Use clang++ for C++ files
        "args": [
          "-std=c++14",  // Set C++ standard (use c++14 or newer)
          "-stdlib=libc++",  // Ensure we use the libc++ library
          "-fcolor-diagnostics",
          "-fansi-escape-codes",
          "-g",  // Include debugging symbols
          "${file}",  // Compile the active file
          "-o", "${fileDirname}/${fileBasenameNoExtension}"  // Output binary with the same name as the file
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ]
  }
  